#PBS -m abe 
#PBS -M molly.romanis.216@cranfield.ac.uk
##
## ====================================
## DO NOT CHANGE THE LINES BETWEEN HERE
## ====================================
#PBS -l application=matlab
#PBS -j oe
#PBS -W sandbox=PRIVATE
#PBS -k n
ln -s $PWD $PBS_O_WORKDIR/$PBS_JOBID
## Change to working directory
cd $PBS_O_WORKDIR
## Calculate number of CPUs
export cpus=`cat $PBS_NODEFILE | wc -l`
## ========
## AND HERE
## ========
##
## Clear any loaded modules and set the module directory
module purge
module use /apps/modules/all
##
## Stop the script execution on runtime errors
set -e
##
## Activate nanopack_env environment
source /apps/software/Miniconda3/22.11.1-1/bin/activate nanopack_env
##
## NanoStat version
NanoStat --version
echo ""
##
### Set up folder pathways
directRNA="/mnt/beegfs/home/s445216/thesis_project/ONP/SG-Nex_data/directRNA/filtered_data/"
cd "${directRNA}"
##
## Run NanoStat on the downsized fastq files
echo "Stats for H9_2_1"
NanoStat --fastq "SGNex_H9_directRNA_replicate2_run1_filt.fastq.gz" --threads 12
echo ""
##
echo "Stats for H9_3_1"
NanoStat --fastq "SGNex_H9_directRNA_replicate3_run1_filt.fastq.gz" --threads 12
echo ""
##
echo "Stats for H9_4_1"
NanoStat --fastq "SGNex_H9_directRNA_replicate4_run1_filt.fastq.gz" --threads 12
echo ""
##
echo "Stats for HEYA8_1_1"
NanoStat --fastq "SGNex_HEYA8_directRNA_replicate1_run1_filt.fastq.gz" --threads 12
echo""
##
echo "Stats for HEYA8_2_1"
NanoStat --fastq "SGNex_HEYA8_directRNA_replicate2_run1_filt.fastq.gz" --threads 12
echo ""
##
echo "Stats for HEYA8_3_1"
NanoStat --fastq "SGNex_HEYA8_directRNA_replicate3_run1_filt.fastq.gz" --threads 12
echo ""
##
echo ""
echo "Done"
echo ""
date
echo ""
##
## DO NOT CHANGE THE LINE BELOW
## ============================
rm $PBS_O_WORKDIR/$PBS_JOBID
