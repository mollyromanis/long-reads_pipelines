ln -s $PWD $PBS_O_WORKDIR/$PBS_JOBID
## Change to working directory
cd $PBS_O_WORKDIR
## Calculate number of CPUs
export cpus=`cat $PBS_NODEFILE | wc -l`
## ========
## AND HERE
## ========
##
module purge
module use /apps/modules/all
##
## Stop at run time errors
set -e
##
## Load required modules
module load Miniconda3/22.11.1-1
##
## Create environment and install nanopack
cd /mnt/beegfs/home/s445216/thesis_project/ONP/SG-Nex_data/full_data/cDNA/quality_control/
source /apps/software/Miniconda3/22.11.1-1/bin/activate nanopack_env
##
## Versions
NanoPlot --version
echo ""
##
## Set up folder pathways
quality_control="/mnt/beegfs/home/s445216/thesis_project/ONP/SG-Nex_data/full_data/directRNA/quality_control/"
RNA="/mnt/beegfs/home/s445216/thesis_project/ONP/SG-Nex_data/full_data/directRNA/differential_expression/"
##
barcode01="${RNA}"barcode01/SGNex_H9_directRNA_replicate2_run1.fastq.gz
barcode02="${RNA}"barcode02/SGNex_H9_directRNA_replicate3_run1.fastq.gz
barcode03="${RNA}"barcode03/SGNex_H9_directRNA_replicate4_run1.fastq.gz
barcode04="${RNA}"barcode04/SGNex_HEYA8_directRNA_replicate1_run1.fastq.gz
barcode05="${RNA}"barcode05/SGNex_HEYA8_directRNA_replicate2_run1.fastq.gz
barcode06="${RNA}"barcode06/SGNex_HEYA8_directRNA_replicate3_run1.fastq.gz
##
output01="${quality_control}"/barcode01
output02="${quality_control}"/barcode02
output03="${quality_control}"/barcode03
output04="${quality_control}"/barcode04
output05="${quality_control}"/barcode05
output06="${quality_control}"/barcode06
##
## Run nanopack on the fastq files
echo "Making plots for Barcode 01"
  NanoPlot \
  --fastq "${barcode01}" \
  --threads 12 \
  --drop_outliers \
  --outdir "${output01}"

  echo "Making plots for Barcode 02"
  NanoPlot \
  --fastq "${barcode02}" \
  --threads 12 \
  --drop_outliers \
  --outdir "${output02}"

  echo "Making plots for Barcode 03"
  NanoPlot \
  --fastq "${barcode03}" \
  --threads 12 \
  --drop_outliers \
  --outdir "${output03}"

  echo "Making plots for Barcode 04"
  NanoPlot \
  --fastq "${barcode04}" \
  --threads 12 \
  --drop_outliers \
  --outdir "${output04}"

  echo "Making plots for Barcode 05"
  NanoPlot \
  --fastq "${barcode05}" \
  --threads 12 \
  --drop_outliers \
  --outdir "${output05}"

  echo "Making plots for Barcode 06"
  NanoPlot \
  --fastq "${barcode06}" \
  --threads 12 \
  --drop_outliers \
  --outdir "${output06}"
##
echo
echo "Completed NanoPlot RNA script"
echo
date
echo
