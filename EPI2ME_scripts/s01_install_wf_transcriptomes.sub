##
## ====================================
## DO NOT CHANGE THE LINES BETWEEN HERE
## ====================================
#PBS -l application=matlab
#PBS -j oe
#PBS -W sandbox=PRIVATE
#PBS -k n
ln -s $PWD $PBS_O_WORKDIR/$PBS_JOBID
## Change to working directory
cd $PBS_O_WORKDIR
## Calculate number of CPUs
export cpus=`cat $PBS_NODEFILE | wc -l`
## ========
## AND HERE
## ========
##
## Use the modules container (with NextFlow and EPI2ME)
module purge
module use /apps/modules/all
##
## Stop at run time errors
set -e
##
## Make sure NextFlow and EPI2ME are installed
module spider Nextflow
module spider EPI2ME
##
## Load NextFlow and EPI2ME
module load Nextflow/23.10.0
module load EPI2ME/5.1.10-1
##
## Locate working directiory
working_folder="/mnt/beegfs/home/s445216/thesis_project/ONP/EPI2ME/"
cd "${working_folder}"
##
## Download wf_transcriptomes pipeline scripts
nextflow run epi2me-labs/wf-transcriptomes --help
##
echo
echo "Completed install_wf_transcriptomes script"
echo
date
echo
##
## DO NOT CHANGE THE LINE BELOW
## ============================
rm $PBS_O_WORKDIR/$PBS_JOBID
